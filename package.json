{
  "name": "gaia-picker",
  "version": "0.2.0",
  "homepage": "https://github.com/gaia-components/gaia-picker",
  "license": "MIT",
  "main": "gaia-picker.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "devDependencies": {
    "babel": "^5.2.12",
    "bower": "^1.4.1",
    "browserify": "^10.1.0",
    "jshint": "^2.7.0",
    "karma": "^0.12.31",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-sinon-chai": "^0.3.0",
    "mozilla-download": "^1.0.5"
  },
  "scripts": {
    "install": "bower install",
    "lint": "./node_modules/jshint/bin/jshint gaia-picker.js gaia-picker-time.js gaia-picker-date.js test/*.js",
    "test": "./node_modules/karma/bin/karma start test/karma.conf.js --single-run",
    "test-dev": "./node_modules/karma/bin/karma start test/karma.conf.js",
    "bundle": "mkdir -p dist && browserify gaia-picker.js --outfile ./dist/gaia-picker.js --standalone GaiaPicker",
    "es5": "mkdir -p dist && babel ./dist/gaia-picker.js --out-file ./dist/gaia-picker-es5.js",
    "build": "npm run bundle && npm run es5"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/gaia-components/gaia-picker.git"
  },
  "bugs": {
    "url": "https://github.com/gaia-components/gaia-picker/issues"
  },
  "browser": {
    "gaia-icons": "./bower_components/gaia-icons/gaia-icons.js",
    "pressed": "./bower_components/pressed/pressed.js"
  }
}
